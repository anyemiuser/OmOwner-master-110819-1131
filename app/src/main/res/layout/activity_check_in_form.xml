<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckIn.CheckInForm"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Id :"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/et_bookid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"

                android:textStyle="bold"
                android:singleLine="true"
                android:textSize="20dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingTop="25dp"
                android:text="Name"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:singleLine="true"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingTop="25dp"
                android:layout_weight="1"
                android:text="Phone Number"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/et_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingTop="25dp"
                android:layout_weight="1"
                android:text="Address Proof"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/Spinner_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:hint="Address Please" />

        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingTop="25dp"
                android:layout_weight="1"
                android:text="Upload Proof"
                android:textSize="15sp"
                android:textStyle="bold"
                />



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <Button
                    android:id="@+id/bt_proofupload"
                    android:text="Upload proof"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    style="@style/buttonStyle"

                    android:layout_marginRight="20dp"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/proofupload"
                    android:layout_width="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_height="100dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingTop="25dp"
                android:layout_weight="1"
                android:text="Upload Photo"
                android:textSize="15sp"
                android:textStyle="bold"
                />



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">



                <Button
                    android:id="@+id/bt_photoupload"
                    style="@style/buttonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:text="Upload Photo"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/photoupload"
                    android:layout_width="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_height="100dp" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="30dp"
            android:text="Add Comment"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/textArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:lines="6"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:hint="Add Comment Here"
            android:background="@drawable/spinner_style"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:scrollHorizontally="false"    />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/checkincancel"
                style="@style/buttonStyle"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:paddingLeft="30dp"
                android:paddingEnd="25dp"
                android:text="Cancel"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />


            <Button
                android:id="@+id/checkinsubmit"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-25dp"
                android:paddingLeft="30dp"
                style="@style/buttonStyle"
                android:paddingRight="30dp"
                android:layout_marginRight="20dp"
                android:text="Submit"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
